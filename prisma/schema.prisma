generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  username String

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt()

  Feed Feed[]
}

// TODO: auth tables

// Y - Channel
// Inst - Profile/Page
// Tiktok - Profile
// Twitter - User
// Reddit - Subreddit
// Reddit User - Reddit User

// feed example: my favourite cooking channels, feed item would any  youtube channel related to my feed (babish culinary universe)
// item type - youtube
model Feed {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  creator     User       @relation(fields: [userId], references: [id])
  items       FeedItem[]
  userId      Int
}

model FeedItem {
  id             Int          @id @default(autoincrement())
  name           String?
  description    String?
  meta           FeedItemMeta @relation(fields: [feedItemMetaId], references: [id])
  Feed           Feed         @relation(fields: [feedId], references: [id])
  feedId         Int
  feedItemMetaId Int
}

enum FeedItemType {
  YoutubeChannel
}

model FeedItemMeta {
  id       Int          @id @default(autoincrement())
  name     String
  //@Munchies - ერთერთი იუთუბერის სახელი-id/channel id
  originId String
  type     FeedItemType
  FeedItem FeedItem[]
}
